                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label>Product</label>
                                                <select class="form-control select2" name="product" id="product"
                                                        style="width: 100%;" required>
                                                    <option selected="selected" value="{{ data.asset.product ?? '' }}">{{ data.asset.product ?? 'Select product' }}</option>
                                                    {% for product in data.products %}
                                                        <option value="{{ product.id }}">{{ product.name }}</option>
                                                    {% endfor %}
                                                </select>
                                            </div>
                                        </div>

                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label>Vendor</label>
                                                <select class="form-control select2" name="vendor" id="vendor"
                                                        style="width: 100%;" required>
                                                    <option selected="selected" value="{{ data.asset.vendorId ?? '' }}">{{ data.asset.vendor ?? 'Select Vendor' }}</option>
                                                    {% for vendor in data.vendors %}
                                                        <option value="{{ vendor.id }}">{{ vendor.vendorName }}</option>
                                                    {% endfor %}
                                                </select>
                                            </div>
                                        </div>

                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label for="asset-name">Asset Name</label>
                                                <input type="text" class="form-control" name="asset-name"
                                                       value="{{ data.asset.assetName ?? '' }}"
                                                       id="asset-name" placeholder="Enter asset name">
                                            </div>
                                        </div>

                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label for="serial-number">Serial Number</label>
                                                <input type="text" class="form-control" name="serial-number"
                                                       value="{{ data.asset.serialNumber ?? '' }}"
                                                       id="serial-number" placeholder="Enter serial number">
                                            </div>
                                        </div>
                                    </div>
                                    <!-- row end -->

                                    <div class="row mt-3">
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label for="price">Price</label>
                                                <input type="text" class="form-control" name="price" id="price"
                                                       value="{{ data.asset.price ?? '' }}"
                                                       placeholder="Enter price">
                                            </div>
                                        </div>

                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label>Location</label>
                                                <select class="form-control select2" name="location" id="location"
                                                        style="width: 100%;" required>
                                                    <option selected="selected" value="{{ data.asset.locationId ?? '' }}">{{ data.asset.location ?? 'Select Location' }}</option>
                                                    {% for location in data.locations %}
                                                        <option value="{{ location.id }}">{{ location.officeName }}</option>
                                                    {% endfor %}
                                                </select>
                                            </div>
                                        </div>

                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label for="purchase-date">Purchase Date</label>
                                                <input type="date" class="form-control" name="purchase-date"
                                                       value="{{ data.asset.purchaseDate ?? '' }}"
                                                       id="purchase-date">
                                            </div>
                                        </div>

                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label for="warranty-expiry-date">Warranty Expiry Date</label>
                                                <input type="date" class="form-control" name="warranty-expiry-date"
                                                       value="{{ data.asset.warrantyExpiryDate ?? '' }}"
                                                       id="warranty-expiry-date">
                                            </div>
                                        </div>
                                    </div>
                                    <!-- row end -->

                                    <div class="row mt-3">
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label>Purchase Type</label>
                                                <input type="text" class="form-control" name="purchase-type"
                                                       value="{{ data.asset.purchaseType ?? '' }}"
                                                       id="purchase-type" placeholder="Enter Purchase Type">
                                            </div>
                                        </div>

                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label for="useful-life">Useful life</label>
                                                <input type="text" class="form-control" name="useful-life"
                                                       value="{{ data.asset.usefulLife ?? '' }}"
                                                       id="useful-life" placeholder="Enter useful life value">
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label for="residual-value">Residual Value</label>
                                                <input type="text" class="form-control" name="residual-value"
                                                       value="{{ data.asset.residualValue ?? '' }}"
                                                       id="residual-value" placeholder="Enter residual value">
                                            </div>
                                        </div>
                                        <div class="col-md-3 text-right">
                                            <div class="form-group text-left mb-5">
                                                <label for="rate">Rate(%)</label>
                                                <input type="text" class="form-control" name="rate" id="rate"
                                                       value="{{ data.asset.rate ?? '' }}"
                                                       placeholder="Enter rate%">
                                            </div>
                                        </div>
                                    </div>
                                    <!-- row end -->
                                    <div class="row pb-5">
                                        <div class="col-md-8"></div>
                                        <div class="col-md-4" style="height: 250px">
                                            <div class="form-group">
                                                <label>Description</label>
                                                <textarea name="description" id="description" class="w-100"
                                                          style="height: 200px">
                                                    {{ data.asset.description ?? '' }}
                                                </textarea>
                                                <button type="submit" class="btn btn-primary mt-1 w-100">Submit</button>
                                            </div>
                                            <div>
                                                <input type="hidden" name="id" id="" value="{{ data.asset.id ?? '' }}">
                                            </div>
                                        </div>
                                    </div>
                                    <!-- row end -->
                                </form>
                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
