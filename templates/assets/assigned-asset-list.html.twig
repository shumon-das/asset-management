{% extends 'datatable-base.html.twig' %}

{% block title %}Assign Asset{% endblock %}

{% block body %}
    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <!-- Left navbar links -->
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
            </li>
        </ul>
    </nav>
    <!-- /.navbar -->

  {% include 'aside.html.twig' %}

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Assign Assets</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
              <li class="breadcrumb-item active">Assign Assets</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header d-flex justify-content-between">
                <a href="{{ path('app_assets') }}" class="btn btn-primary">asset lists</a>
                <a href="{{ path('assigning_assets') }}" class="btn btn-primary position-absolute" style="right: 15px">assign asset</a>
              </div>
              <div class="card-body">
                <table id="example1" class="table table-bordered table-striped">
                  <thead>
                  <tr>
                    <th>ID</th>
                    <th>Asset Name</th>
                    <th>Department</th>
                    <th>Location</th>
                    <th>Assigned</th>
                    <th>Current State</th>
                    <th>Status</th>
                    <th>Assign</th>
                    <th>Action</th>
                  </tr>
                  </thead>
                  <tbody>
                  {% for asset in assets %}
                    <tr>
                      <td>#ams-{{ asset.id }}</td>
                      <td>{{ asset.assetName }}</td>
                      <td>{{ asset.departmentName }}</td>
                      <td>{{ asset.location }}</td>
                      <td>{{ asset.assigned }}</td>
                      <td>{{ asset.currentState }}</td>
                      <td>{{ asset.status }}</td>
                      <td class="text-center">
                        <a href="{{ path('edit_assigned_asset', {id: asset.id}) }}" class="btn btn-info btn-sm">Re Assign</a>
                      </td>
                      <td>
                        <div class="row d-sm-flex justify-content-sm-around">
                          <a href="{{ path('view_assigned_asset', {id: asset.id}) }}" class="btn btn-success btn-sm"><i class="fas fa-eye"></i></a>
                          <a href="{{ path('delete_assigned', {id: asset.id}) }}" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></a>
                        </div>
                      </td>
                    </tr>
                  {% endfor %}
                  </tbody>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.control-sidebar -->

    {% include 'footer.html.twig' %}

{% endblock %}