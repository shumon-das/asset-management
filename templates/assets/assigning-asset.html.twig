{% extends 'form-base.html.twig' %}

{% block title %}add new asset{% endblock %}

{% block body %}
    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <!-- Left navbar links -->
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
            </li>
        </ul>
    </nav>
    <!-- /.navbar -->

    {% include 'aside.html.twig' %}

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Asset List</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
                            <li class="breadcrumb-item active">Assets</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <a href="{{ path('app_assets') }}" class="btn btn-primary btn-sm">back to asset list</a>
                            </div>
                            <div class="card-body">
                                <form action="{{ path(assignedAsset is defined ? 'update_assigned_asset' : 'save_assign_asset') }}" method="post">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label>Product Category</label>
                                                <select class="form-control select2" name="product-category"
                                                        id="product-category" style="width: 100%;">
                                                    <option selected="selected">{{ assignedAsset.productCategory ?? 'Select Product Category' }}</option>
                                                    {% for product in products %}
                                                        <option>{{ product.category }}</option>
                                                    {% endfor %}
                                                </select>
                                            </div>
                                        </div>

                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label>Product Type</label>
                                                <select class="form-control select2" name="product-type"
                                                        id="product-type" style="width: 100%;">
                                                    <option selected="selected">{{ assignedAsset.productType ?? 'Select Product Type' }}</option>
                                                    {% for product in products %}
                                                        <option>{{ product.type }}</option>
                                                    {% endfor %}
                                                </select>
                                            </div>
                                        </div>

                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label>Product</label>
                                                <select class="form-control select2" name="product-name"
                                                        id="product-name" style="width: 100%;">
                                                    <option selected="selected">{{ assignedAsset.product ?? 'Select Product' }}</option>
                                                    {% for product in products %}
                                                        <option>{{ product.name }}</option>
                                                    {% endfor %}
                                                </select>
                                            </div>
                                        </div>

                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label>Vendor</label>
                                                <select class="form-control select2" name="vendor" id="vendor"
                                                        style="width: 100%;">
                                                    <option selected="selected" value="{{ assignedAsset.vendorId ?? '' }}">{{ assignedAsset.vendor ?? 'Select Vendor' }}</option>
                                                    {% for vendor in vendors %}
                                                        <option value="{{ vendor.id }}">{{ vendor.vendorName }}</option>
                                                    {% endfor %}
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- row end -->

                                    <div class="row mt-3">
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label for="location">Location</label>
                                                <select class="form-control select2" name="location" id="location"
                                                        style="width: 100%;">
                                                    <option selected="selected" value="{{ assignedAsset.locationId ?? '' }}">{{ assignedAsset.location ?? 'Select Location' }}</option>
                                                    {% for location in locations %}
                                                        <option value="{{ location.id }}">{{ location.officName }}</option>
                                                    {% endfor %}
                                                </select>
                                            </div>
                                        </div>

                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label for="asset-name">Asset Name</label>
                                                <select class="form-control select2" name="asset-name" id="asset-name"
                                                        style="width: 100%;">
                                                    <option selected="selected" value="{{ assignedAsset.assetId ?? '' }}">{{ assignedAsset.assetName ?? 'Select Asset' }}</option>
                                                    {% for asset in assets %}
                                                        <option value="{{ asset.id }}">{{ asset.assetName }}</option>
                                                    {% endfor %}
                                                </select>
                                            </div>
                                        </div>

                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label for="department">Department</label>
                                                <select class="form-control select2" name="department" id="department"
                                                        style="width: 100%;">
                                                    <option selected="selected" value="{{ assignedAsset.department ?? '' }}">{{ assignedAsset.departmentName ?? 'Select Department' }}</option>
                                                    {% for department in departments %}
                                                        <option value="{{ department.id }}">{{ department.departmentName }}</option>
                                                    {% endfor %}
                                                </select>
                                            </div>
                                        </div>

                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label>Assign to</label>
                                                <select class="form-control select2" name="assign-to" id="assign-to"
                                                        style="width: 100%;">
                                                    <option selected="selected" value="{{ assignedAsset.assignedId ?? '' }}">{{ assignedAsset.assigned ?? 'Select User' }}</option>
                                                    {% for user in users %}
                                                        <option value="{{ user.id }}">{{ user.name }}</option>
                                                    {% endfor %}
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- row end -->

                                    <div class="row mt-3">
                                        <div class="col-md-4" style="height: 250px">
                                            <div class="form-group">
                                                <label>Description</label>
                                                <textarea name="description" id="description" class="w-100"
                                                          style="height: 200px">
                                                    {{ assignedAsset.description ?? '' }}
                                                </textarea>
                                            </div>
                                        </div>
