{#                                            </div>#}
{#                                        </div>#}
                                        <div>
                                            <input type="hidden" name="id" id="" value="{{ assignedAsset.id ?? '' }}">
                                        </div>
                                        <div class="col-md-4 text-right">
                                            <button type="submit" class="btn btn-primary" style="margin-top: 200px">
                                                Submit
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
    <!-- /.control-sidebar -->

    {% include 'footer.html.twig' %}

{% endblock %}


