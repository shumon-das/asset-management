{% extends 'datatable-base.html.twig' %}

{% block title %}settings{% endblock %}

{% block body %}
    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <!-- Left navbar links -->
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
            </li>
        </ul>
    </nav>
    <!-- /.navbar -->

    {% include 'aside.html.twig' %}

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Settings</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
                            <li class="breadcrumb-item active">Settings</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <hr>
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-2">
                        <div class="row">
                            <div class="col-6">
                                <h5>Categories</h5>
                            </div>
                            <div class="col-6 text-right">
                                <a href="#" class="btn btn-sm btn-primary">
                                    <i class="fas fa-plus-square"></i>
                                </a>
                            </div>
                        </div>
                        <table class="table">
                            <tbody>
                            {% for category in categories %}
                                <tr>
                                    <td class="btn-flat btn-outline-primary d-flex justify-content-between">
                                       <span> {{ category.name }} </span>
                                        {% if category.childes|length > 0 %}
                                            <i class="fas fa-angle-right right"></i>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    <div class="col-md-3">
                        <div class="row">
                            <div class="col-6">
                                <h5>Sub Categories</h5>
                            </div>
                            <div class="col-6 text-right">
                                <a href="#" class="btn btn-sm btn-primary">
                                    <i class="fas fa-plus-square"></i>
                                </a>
                            </div>
                        </div>
                        <table class="table">
                            <tbody>
                            {% for category in categories %}
                                <tr>
                                    <td class="btn-flat btn-outline-primary">{{ category.name }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
    <!-- /.control-sidebar -->

    {% include 'footer.html.twig' %}

{% endblock %}