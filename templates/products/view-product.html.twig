{% extends 'view-base.html.twig' %}

{% block title %} product {% endblock %}

{% block body %}
    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <!-- Left navbar links -->
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
            </li>
        </ul>
    </nav>
    <!-- /.navbar -->

    {% include 'aside.html.twig' %}

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>{{ product.name }}</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
                            <li class="breadcrumb-item active">Assets</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <a href="{{ path('app_assets') }}" class="btn btn-primary btn-sm">back to asset list</a>
                            </div>
                            <div class="card-body">
                                <div class="row mb-3">
                                    <div class="col-md-1"></div>
                                    <div class="col-md-5">
                                        <div class="row">
                                            <div class="col-4">
                                                <label>Product Category: </label>
                                            </div>
                                            <div class="col-8">
                                                {{ product.category }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- end row -->

                                <div class="row mb-3">
                                    <div class="col-md-1"></div>
                                    <div class="col-md-5">
                                        <div class="row">
                                            <div class="col-4">
                                                <label>Product Type: </label>
                                            </div>
                                            <div class="col-8">
                                                {{ product.type }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- row end -->

                                <div class="row mb-3">
                                    <div class="col-md-1"></div>
                                    <div class="col-md-5">
                                        <div class="row">
                                            <div class="col-4">
                                                <label>ProductName: </label>
                                            </div>
                                            <div class="col-8">
                                                {{ product.name }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- end row -->

                                <div class="row mb-3">
                                    <div class="col-md-1"></div>
                                    <div class="col-md-5">
                                        <div class="row">
                                            <div class="col-4">
                                                <label>Manufacturer: </label>
                                            </div>
                                            <div class="col-8">
                                                {{ product.manufacturer }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- row end -->

                                <div class="row mb-3">
                                    <div class="col-md-1"></div>
                                    <div class="col-md-5">
                                        <div class="row">
                                            <div class="col-4">
                                                <label>Description: </label>
                                            </div>
                                            <div class="col-8">
                                                {{ product.description }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- end row -->

                                <div class="row mb-3">
                                    <div class="col-md-1"></div>
                                    <div class="col-md-5">
                                        <div class="row">
                                            <div class="col-4">
                                                <label>Status: </label>
                                            </div>
                                            <div class="col-8">
                                                {{ product.status }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- end row -->

                                <div class="row mt-5 mb-5">
                                    <div class="col-md-10 text-center"><span class="border-bottom p-1">Created By {#{{ product.createdBy }}#} Username at {{ product.createdAt }}</span></div>
                                </div>
                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
    <!-- /.control-sidebar -->

    {% include 'footer.html.twig' %}

{% endblock %}