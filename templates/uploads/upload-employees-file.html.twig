{% extends 'datatable-base.html.twig' %}

{% block title %}upload csv file{% endblock %}

{% block body %}
    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <!-- Left navbar links -->
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
            </li>
        </ul>
    </nav>
    <!-- /.navbar -->

    {% include 'aside.html.twig' %}

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Upload CSV File</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
                            <li class="breadcrumb-item active">Upload CSV File</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header d-flex justify-content-between">
                                <a href="{{ path('app_employees') }}" class="btn btn-primary"> back to employees</a>
                            </div>
                            <div class="card-body">
                                <div class="card">
                                    <h5 class="p-3">Please <a href="{{ asset('files/example-employees-csv.xlsx') }}"
                                                              download="">click here</a> to download your csv file
                                        Format to import</h5>
                                    <div class="row">
                                        <div class="col-md-3">
                                            <form action="{{ path('app_show_employees_files') }}" method="post"
                                                  enctype="multipart/form-data" class="pb-5">
                                                <label for="employees-csv" class="ml-5 text-center d-block"
                                                       style="width: 300px;height: 175px;line-height: 175px;border: 1px dashed;cursor: pointer"
                                                       id="file-label">Select CSV File</label>
                                                <input type="file" name="employees-csv" id="employees-csv"
                                                       style="display: none" required>
                                                <button type="submit" class="btn btn-sm btn-primary ml-5"
                                                        style="width: 300px; opacity: 0" id="file-upload-submit-btn">Select
                                                </button>
                                                <span class="alert alert-danger text-center mx-5" id="file-extension-error" style="display: none">Only Excel Sheet Acceptable</span>
                                            </form>
                                        </div>
                                        <div class="col-md-9 border-left px-3">
                                            <table id="example1" class="table table-bordered table-striped">
                                                <thead>
                                                    <tr>
                                                        <th style="width: 10%">Row No</th>
                                                        <th>Reporting Manager</th>
                                                        <th>Reporting Manager Email</th>
                                                        <th>Department Name</th>
                                                        <th>Location Office Name</th>
                                                        <th>In Database</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    {% if data is defined %}
                                                        {% for file in data %}
                                                            <tr>
                                                                <td>{{ file.row }}</td>
                                                                <td>{{ file.reportingManager }}</td>
                                                                <td>{{ file.email }}</td>
                                                                <td>{{ file.department }}</td>
                                                                <td>{{ file.location }}</td>
                                                                <td>
                                                                    {% if file.reportingMCondition %}
                                                                        <button class="btn btn-success">
                                                                            <i class="fas fa-check"></i>
                                                                        </button>
                                                                    {% else %}
                                                                        <button class="btn btn-danger">
                                                                            <i class="fas fa-ban"></i>
                                                                        </button>
                                                                    {% endif %}
                                                                </td>
                                                            </tr>
                                                        {% endfor %}
                                                    {% endif %}
                                                </tbody>
                                            </table>
                                            <div class="row py-3">
                                                <div class="col-12 text-right">
                                                    <small><b>Note: </b> creation new employee have 3 dependency (Department, Location, Reporting manager) which you must have to provide correct information. otherwise you will be not able to upload data</small>
                                                    <br>
                                                    {% if errors is defined%}
                                                        <button class="btn btn btn-success px-5"> Upload </button>
                                                    {% else %}
                                                        <a href="{{ path('app_upload_employees') }}" class="btn btn-success px-5">Upload</a>
                                                    {% endif %}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
    <!-- /.control-sidebar -->

    {% include 'footer.html.twig' %}

{% endblock %}