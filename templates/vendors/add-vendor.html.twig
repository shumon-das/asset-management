{% extends 'form-base.html.twig' %}

{% block title %}add new vendor{% endblock %}

{% block body %}
    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <!-- Left navbar links -->
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
            </li>
        </ul>
    </nav>
    <!-- /.navbar -->

    {% include 'aside.html.twig' %}

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Add New Vendor</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
                            <li class="breadcrumb-item active">Add Vendor</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <a href="{{ path('app_vendors') }}" class="btn btn-primary btn-sm">back to
                                    Vendors</a>
                            </div>
                                <form action="{{ path('app_save_vendor') }}" method="post">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-1"></div>
                                            <div class="col-md-6">
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label>Vendor Name</label>
                                                            <input type="text" class="form-control" id="vendor-name"
                                                                   name="vendor-name"
                                                                   value="{{ vendor.vendorName ?? "" }}"
                                                                   placeholder="Enter name">
                                                        </div>
                                                    </div>

                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label>Vendor Email</label>
                                                            <input type="email" class="form-control" id="vendor-email"
                                                                   name="vendor-email" value="{{ vendor.email ?? "" }}"
                                                                   placeholder="Enter email">
                                                        </div>
                                                    </div>
                                                </div>
                                                <!-- row end -->

                                                <div class="row mt-3">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label for="phone">Phone</label>
                                                            <input type="text" class="form-control" id="phone"
                                                                   name="phone" value="{{ vendor.phone ?? "" }}"
                                                                   placeholder="Enter phone number">
                                                        </div>
                                                    </div>

                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label>Contact Person</label>
                                                            <input type="text" class="form-control" id="contact-person"
                                                                   name="contact-person"
                                                                   value="{{ vendor.contactPerson ?? "" }}"
                                                                   placeholder="Enter contact person name">
                                                        </div>
                                                    </div>
                                                </div>
                                                <!-- row end -->

                                                <div class="row mt-3">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label for="exampleInputEmail1">Designation</label>
                                                            <input type="text" class="form-control" id="designation"
                                                                   name="designation"
                                                                   value="{{ vendor.designation ?? "" }}"
                                                                   placeholder="Enter designation">
                                                        </div>
                                                    </div>

                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label>Country</label>
                                                            <select class="form-control select2" style="width: 100%;"
                                                                    id="country" name="country"
                                                            >
                                                                <option selected="selected">{{ vendor.country ?? "Ghana" }}</option>
                                                                <option>Burkina Faso</option>
                                                                <option>Ivory Coast</option>
                                                                <option>Togo</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                </div>
                                                <!-- row end -->

                                                <div class="row mt-3">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label>State</label>
                                                            <select class="form-control select2" style="width: 100%;"
                                                                    id="state" name="state">
                                                                <option selected="selected">{{ vendor.state ?? "Ghana" }}</option>
                                                                <option>Burkina Faso</option>
                                                                <option>Ivory Coast</option>
                                                                <option>Togo</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label>City</label>
                                                            <select class="form-control select2" style="width: 100%;"
                                                                    id="city" name="city">
                                                                <option selected="selected">{{ vendor.city ?? "Ghana" }}</option>
                                                                <option>Kumasi</option>
                                                                <option>Tamale</option>
                                                                <option>Sekondi-Takoradi</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                </div>
                                                <!-- row end -->

                                                <div class="row mt-3">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label for="exampleInputEmail1">Zip Code</label>
                                                            <input type="text" class="form-control" id="zip-code"
                                                                   name="zip-code" value="{{ vendor.zipCode ?? "" }}"
                                                                   placeholder="Enter zip code">
                                                        </div>
                                                    </div>

                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label>GSTIN No</label>
                                                            <input type="text" class="form-control" id="contact-person"
                                                                   name="gstin-no" value="{{ vendor.gstinNo ?? "" }}"
                                                                   placeholder="Enter gstin number">
                                                        </div>
                                                    </div>
                                                </div>
                                                <!-- row end -->

                                                <div class="row mt-3">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label for="exampleInputEmail1"
                                                                   class="d-block">Address</label>
                                                            <textarea name="address" id="address" cols="40"
                                                                      rows="2">{{ vendor.address ?? "" }}
                                                        </textarea>
                                                        </div>
                                                    </div>

                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label class="d-block">Description</label>
                                                            <textarea name="description" id="description" cols="40"
                                                                      rows="2">{{ vendor.description ?? "" }}
                                                        </textarea>
                                                        </div>
                                                    </div>
                                                </div>
                                                <!-- row end -->

                                                <div class="row">
                                                    <input type="hidden" name="id" id="" value="{{ vendor.id ?? "" }}">
                                                </div>

                                                <hr>
                                                <div class="row mt-3">
                                                    <div class="col-md-12 mt-3 text-right">
                                                        <button type="submit" class="btn btn-primary">
                                                            Submit
                                                        </button>
                                                    </div>
                                                </div>
                                                <!-- row end -->
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
    <!-- /.control-sidebar -->

    {% include 'footer.html.twig' %}

{% endblock %}