{% extends 'view-base.html.twig' %}

{% block title %} vendor {% endblock %}

{% block body %}
    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <!-- Left navbar links -->
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
            </li>
        </ul>
    </nav>
    <!-- /.navbar -->

    {% include 'aside.html.twig' %}

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>{{ vendor.vendorName }}</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
                            <li class="breadcrumb-item active">Vendor</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <a href="{{ path('app_vendors') }}" class="btn btn-primary btn-sm">back to vendor list</a>
                            </div>
                            <div class="card-body">
                                <div class="row mb-3">
                                    <div class="col-md-1"></div>
                                    <div class="col-md-5">
                                        <div class="row">
                                            <div class="col-4">
                                                <label>Vendor Name: </label>
                                            </div>
                                            <div class="col-8">
                                                {{ vendor.vendorName }}
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-5">
                                        <div class="row">
                                            <div class="col-4">
                                                <label>Vendor Email: </label>
                                            </div>
                                            <div class="col-8">
                                                {{ vendor.email }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- end row -->

                                <div class="row mb-3">
                                    <div class="col-md-1"></div>
                                    <div class="col-md-5">
                                        <div class="row">
                                            <div class="col-4">
                                                <label>Phone: </label>
                                            </div>
                                            <div class="col-8">
                                                {{ vendor.phone }}
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-5">
                                        <div class="row">
                                            <div class="col-4">
                                                <label>Contact Person: </label>
                                            </div>
                                            <div class="col-8">
                                                {{ vendor.contactPerson }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- row end -->

                                <div class="row mb-3">
                                    <div class="col-md-1"></div>
                                    <div class="col-md-5">
                                        <div class="row">
                                            <div class="col-4">
                                                <label>Designation: </label>
                                            </div>
                                            <div class="col-8">
                                                {{ vendor.designation }}
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-5">
                                        <div class="row">
                                            <div class="col-4">
                                                <label>Country: </label>
                                            </div>
                                            <div class="col-8">
                                                {{ vendor.country }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- end row -->

                                <div class="row mb-3">
                                    <div class="col-md-1"></div>
                                    <div class="col-md-5">
                                        <div class="row">
                                            <div class="col-4">
                                                <label>State: </label>
                                            </div>
                                            <div class="col-8">
                                                {{ vendor.state }}
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-5">
                                        <div class="row">
                                            <div class="col-4">
                                                <label>City: </label>
                                            </div>
                                            <div class="col-8">
                                                {{ vendor.city }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- row end -->

                                <div class="row mb-3">
                                    <div class="col-md-1"></div>
                                    <div class="col-md-5">
                                        <div class="row">
                                            <div class="col-4">
                                                <label>Zip Code: </label>
                                            </div>
                                            <div class="col-8">
                                                {{ vendor.zipCode }}
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-5">
                                        <div class="row">
                                            <div class="col-4">
                                                <label>GSTIN No: </label>
                                            </div>
                                            <div class="col-8">
                                                {{ vendor.gstinNo }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- end row -->

                                <div class="row mb-3">
                                    <div class="col-md-1"></div>
                                    <div class="col-md-5">
                                        <div class="row">
                                            <div class="col-4">
                                                <label>Address: </label>
                                            </div>
                                            <div class="col-8">
                                                {{ vendor.address }}
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-5">
                                        <div class="row">
                                            <div class="col-4">
                                                <label>Description: </label>
                                            </div>
                                            <div class="col-8">
                                                {{ vendor.description }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- row end -->
                                <div class="row mt-5 mb-5">
                                    <div class="col-md-10 text-center"><span class="border-bottom p-1">Created By {#{{ vendor.createdBy }}#} Username at {{ createdAt }}</span></div>
                                </div>
                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
    <!-- /.control-sidebar -->

    {% include 'footer.html.twig' %}

{% endblock %}
